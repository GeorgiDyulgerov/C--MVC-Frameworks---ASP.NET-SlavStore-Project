@model IEnumerable<SlavStore.Models.Store>

@{
    ViewBag.Title = "List";
}

<h2>Stores</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id,area="" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id, area = "" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id, area = "" })
        </td>
    </tr>
}

</table>
