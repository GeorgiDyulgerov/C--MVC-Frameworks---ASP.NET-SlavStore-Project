@using SlavStore.Models.ViewModels;
@model List<HomeViewModel>
@{
    ViewBag.Title = "Index";
    int count = 0;
}

<div class="container" style="margin-top: 2em"> 
    <div class="row">
        <div class="col-md-2 jumbotron">
            <h3>Filters:</h3>
            <ul>
                <li>soed</li>
                <li>soed</li>
                <li>soed</li>
                <li>soed</li>
            </ul>
        </div>
        <div class="col-md-9 col-md-offset-1 jumbotron">
            <div class="row">
                @foreach (var item in Model)
                {

                    if (count%3 == 0)
                    {
                        @Html.Raw("<div class=\"row\">")
                    }
                    <div class="col-md-4 panel well center-block text-center" style="height: 30em;">
                        <h2 class="text-center">@item.Name</h2>
                        <div style="height: 15em">
                            @if (item.Image == null)
                            {
                                <img src="https://www.jordans.com/~/media/jordans%20redesign/no-image-found.ashx?h=275&amp;la=en&amp;w=275&amp;hash=F87BC23F17E37D57E2A0B1CC6E2E3EEE312AAD5B" alt="no image" class="col-md-10 col-md-offset-1" height="200px"/>
                            }
                            else
                            {
                                <img src="@item.Image" alt="@item.Name" class="col-md-10 col-md-offset-1" height="200px"/>
                            }
                        </div>
                        <div class="col-md-12">
                            <h4>Price: @item.Price</h4>
                            <p>
                                @Html.ActionLink("Details »", "Details", "Items", new {id = item.Id}, htmlAttributes: new {@class = "btn btn-default"})
                            </p>
                        </div>
                    </div>
                    count++;
                    if (count%3 == 0 || count == Model.Count)
                    {
                        @Html.Raw("</div>")
                    }

                }
            </div>
        </div>


    </div>
</div>
