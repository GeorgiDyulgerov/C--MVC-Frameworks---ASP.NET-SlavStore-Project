@using SlavStore.Models
@model SlavStore.Models.Comment

@{
    ViewBag.Title = "Details";
}
<div class="panel">
    <h4>
        @(@Model.User.FullName != null ? Html.Raw("Comment by " + @Model.User.FullName) : Html.Raw("Comment by " + @Model.User.UserName))
    </h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.DisplayTextFor(model => model.Text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stars)
        </dt>

        <dd>
            @for (int i = 0; i < @Model.Stars; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
        </dd>

    </dl>
</div>
