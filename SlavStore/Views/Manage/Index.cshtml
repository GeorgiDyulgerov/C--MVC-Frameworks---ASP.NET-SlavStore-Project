@model SlavStore.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Full Name:</dt>
        <dd>
            @Html.DisplayTextFor(model => model.FullName)
        </dd>
        <dt>Addres:</dt>
        <dd>
            @Html.DisplayTextFor(model => model.Addres)
        </dd>
        <dt></dt>
        <dd>@Html.ActionLink("Change personal info", "ChangeInfo", null, htmlAttributes: new {@class = "btn btn-default"})</dd>
        <br/>
        <dt>My Items:</dt>
        <dd>@Html.ActionLink("See them", "MyItems","Items",null, htmlAttributes: new { @class = "btn btn-default" })</dd>
        <hr />

        @if (Model.Store != null)
        {
            <dt>Store:</dt>
            <dd>

                @Html.ActionLink("Visit " + @Model.Store.Name, "Details", "Stores", new { id = @Model.Store.Id }, null)
            </dd>
        }

        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>

    </dl>
</div>
